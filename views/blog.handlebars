<div class="container" id="blogPosts">
  <div class="col-md-12 text-center" id="homeTitle">
    <h2 id="homeHeader" data-id="{{blog.id}}">
      {{blog.title}}
    </h2>
    <h3>
      By: {{blog.author}}
    </h3>
    <h4>
    {{format_date blog.date}}
    </h4>
  </div>
  <div class="container">
    <div class="row" id="blogPost">
      <div class="col-md-12">
        <p>{{blog.body}}</p>
      </div>
    </div>
  </div>
</div>
<div class="container" id="commentContainer" data-username="{{username}}" style="display:none;">
  <form class="form comment-form">
      <div class="form-group-comment">
        <label for="comment-body">Body:</label>
        <textarea class="form-input-comment-body" id="comment-body" name="comment-body" ></textarea>
      </div>
      <div class="form-group-comment">
        <button type="submit" class="btn btn-primary createBtn" id="createBtn">Submit</button>
      </div>
  </form>
</div>
<div class="container">
    {{#if comment}}
        <br>
        <br>
        <h3>Comments:</h3>
    {{#with blog}}
    {{#each comments}}
    <div class="row" id="blogPost">
        <div class="col-md-4">
                  {{author}} -- {{format_date date}}
        </div>
        <div class="col-md-6">
          {{body}}
        </div>
      </div>

    {{/each}}
    {{/with}}
    {{/if}}
    </div>
{{#if loggedIn}}
<h3 class="col-2 commentLink"><i class="fas fa-plus-square"></i><a href="" class="newPost" id="commentLink">Add Comment</a></h2>
{{/if}}



{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}